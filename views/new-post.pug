extends my-dashboard

block unique-content
    form(action="/auth/signout?_method=DELETE", method="POST", id="logout-form")
        input(type="submit" value="Sign Out" class="button")
    div.clr 
    h2(class="page-title-center") Add a New Statement
    br
    h3(class="page-title-center") 
        em Remember, do not upload copywrited material for which you don't have the rights!  
