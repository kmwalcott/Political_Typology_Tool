        label(for="stance") Stance:
        select(name="stance" id="stance" required) 
            option(value="") --Choose stance on question--
            option(value="lib") Libertarian
            option(value="int") Interventionist
        br
        label(for="content") Quote:
        textarea(name="content" id="content" rows="5" cols="50" placeholder="Enter full statement or video summary here" required)
